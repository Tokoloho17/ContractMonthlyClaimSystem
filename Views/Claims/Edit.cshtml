@model ContractMonthlyClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Edit Claim";
}

<h2>Edit Claim</h2>

<form asp-action="Edit" asp-controller="Claims" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div>
        <label asp-for="HoursWorked"></label>
        <input asp-for="HoursWorked" class="form-control" />
    </div>
    <div>
        <label asp-for="HourlyRate"></label>
        <input asp-for="HourlyRate" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

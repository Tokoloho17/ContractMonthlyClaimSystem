@model ContractMonthlyClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Approve Claim";
}

<h2>Approve Claim</h2>

<p>Are you sure you want to approve this claim?</p>

<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <strong>Hours Worked:</strong> @Model.HoursWorked
</div>
<div>
    <strong>Hourly Rate:</strong> @Model.HourlyRate
</div>

<form asp-action="Approve" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-success">Approve</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

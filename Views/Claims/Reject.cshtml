@model ContractMonthlyClaimSystem.Models.Claim

@{
    ViewData["Title"] = "Reject Claim";
}

<h2>Reject Claim</h2>

<p>Are you sure you want to reject this claim?</p>

<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <strong>Hours Worked:</strong> @Model.HoursWorked
</div>
<div>
    <strong>Hourly Rate:</strong> @Model.HourlyRate
</div>

<form asp-action="Reject" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Reject</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
